---
import Hamburger from "./Hamburger.astro";
import ThemeIcon from "./ThemeIcon.astro";
import Navigation from "./Navigation.astro";

const { pageTitle } = Astro.props;
---

<header>
  <section>
    <h1>{pageTitle}</h1>
    <div>
      <ThemeIcon />
      <Hamburger />
    </div>
  </section>
  <Navigation />
</header>

<style>
  section {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  div {
    display: flex;
    align-items: center;
  }
</style>
